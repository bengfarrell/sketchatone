{
  "name": "sketchatone",
  "version": "1.0.0",
  "description": "Sketchatone - Node.js, Python, and Web implementation",
  "main": "dist/index.js",
  "type": "module",
  "workspaces": [
    "../../spectrumizer"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    }
  },
  "bin": {
    "strum-events": "./dist/cli/strum-event-viewer.js",
    "midi-strummer": "./dist/cli/midi-strummer.js",
    "server": "./dist/cli/server.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --project tsconfig.cli.json",
    "build:cli": "tsc --project tsconfig.cli.json",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run test/unit/",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:server": "vitest run --config vitest.server.config.ts",
    "test:server:watch": "vitest --config vitest.server.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "pretest:spectrumizer": "rm -f ../../spectrumizer/node_modules && ln -sf \"$(pwd)/node_modules\" ../../spectrumizer/node_modules",
    "test:spectrumizer": "APP_ROOT_COMPONENT=sketchatone-tablet-app playwright test --config=playwright.spectrumizer.config.ts",
    "test:spectrumizer:ci": "APP_ROOT_COMPONENT=sketchatone-tablet-app playwright test --config=playwright.spectrumizer.config.ts --reporter=line",
    "test:spectrumizer:ui": "APP_ROOT_COMPONENT=sketchatone-tablet-app playwright test --config=playwright.spectrumizer.config.ts --ui",
    "test:spectrumizer:headed": "APP_ROOT_COMPONENT=sketchatone-tablet-app playwright test --config=playwright.spectrumizer.config.ts --headed",
    "test:spectrumizer:debug": "APP_ROOT_COMPONENT=sketchatone-tablet-app playwright test --config=playwright.spectrumizer.config.ts --debug",
    "strum-events": "node dist/cli/strum-event-viewer.js",
    "midi-strummer": "node dist/cli/midi-strummer.js",
    "server": "node dist/cli/server.js"
  },
  "dependencies": {
    "@julusian/midi": "^3.6.1",
    "@spectrum-web-components/bundle": "^1.8.0",
    "blankslate": "file:../blankslate",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.2.23",
    "lit": "^3.3.1",
    "ora": "^8.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.10",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "happy-dom": "^14.12.3",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.2",
    "tsx": "^4.7.1",
    "typescript": "~5.5.3",
    "vite": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
